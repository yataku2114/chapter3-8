<body>
  <h1 class=top_text>Books</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
    </thead>

    <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td>
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
      </tr>
    </tbody>
    <% end %>

  </table>


    <h2 class="top_text">New book</h2>
    <% if @book.errors.any? %>
      <%= @book.errors.count %>errors prohibited this book from being saved:
      <% @book.errors.full_messages.each do |message| %>
        <%= message %>
      <% end %>
    <% end %>

    <%= form_with model:@book, local:true do |f| %>


    <div class="index_text">
      <div>Title</div>
      <%= f.text_field :title %>
    </div>

    <div class="index_text">
      <div>Body</div>
      <%= f.text_area :body %>
    </div>

    <p><%= f.submit "Create Book" %></p>

    <% end %>
</body>